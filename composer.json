{
    "name": "joseabraham/ecommerce",
    "description": "Ecommerce site with pure PHP and vanilla JavaScript",
    "type": "project",
    "authors": [
        {
            "name": "Jose Abraham Castillo",
            "email": "crjoseabraham@gmail.com"
        }
    ],
    "autoload": {
        "files": [
            "src/Config/constants.php",
            "src/Config/utilities.php"
        ],
        "psr-4": {
            "App\\Core\\": "src/Core",
            "App\\Controller\\": [
                "src/Controllers",
                "src/Controllers/Auth",
                "src/Controllers/Payments",
                "src/Controllers/Products",
                "src/Controllers/Users"
            ],
            "App\\Model\\": "src/models"
        }
    },
    "require": {
        "philo/laravel-blade": "^3.1",
        "phpmailer/phpmailer": "^6.1"
    }
}
